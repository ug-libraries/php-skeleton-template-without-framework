{
    "name": "ug-php/php-template",
    "description": "The skeleton application for php project without framework.",
    "keywords": [
        "php",
        "skeleton",
        "clean-architecture",
        "hexagonal-architecture"
    ],
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/ug-libraries/php-skeleton-template-without-framework",
    "authors": [
        {
            "name": "Ulrich Geraud AHOGLA",
            "email": "iamcleancoder@gmail.com",
            "role": "Software Engineer",
            "homepage": "https://github.com/ug-libraries/php-skeleton-template-without-framework"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ug-php/clean-architecture-core": "^1.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.1",
        "phpunit/phpunit": "^11.1",
        "phpstan/phpstan": "^1.11",
        "squizlabs/php_codesniffer": "^3.10",
        "symplify/easy-coding-standard": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
